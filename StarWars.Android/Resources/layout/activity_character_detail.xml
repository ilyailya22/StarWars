                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <TextView android:text="Species:" style="@style/StarJediLabel" />
            <TextView local:MvxBind="Text Character.Species" style="@style/StarJediText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rowName"
                style="@style/StarJediLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <TextView android:text="Vehicles:" style="@style/StarJediLabel" />
            <TextView local:MvxBind="Text Character.Vehicles" style="@style/StarJediText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rowName"
                style="@style/StarJediLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <TextView android:text="Starships:" style="@style/StarJediLabel" />

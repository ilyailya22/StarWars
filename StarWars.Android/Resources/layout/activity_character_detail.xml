<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:paddingTop="64dp"
            android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowName" style="@style/StarJediLayout" 
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelName" android:text="NAME:" style="@style/StarJediLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueName" local:MvxBind="Text Character.Name" style="@style/StarJediText"
                    app:layout_constraintStart_toEndOf="@id/labelName"
                    app:layout_constraintTop_toTopOf="@id/labelName"
                    app:layout_constraintBottom_toBottomOf="@id/labelName"
                    app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowHeight" style="@style/StarJediLayout"
                app:layout_constraintTop_toBottomOf="@id/rowName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelHeight" android:text="HEIGHT:" style="@style/StarJediLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueHeight" local:MvxBind="Text Character.Height" style="@style/StarJediText"
                    app:layout_constraintStart_toEndOf="@id/labelHeight"
                    app:layout_constraintTop_toTopOf="@id/labelHeight"
                    app:layout_constraintBottom_toBottomOf="@id/labelHeight"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowMass" style="@style/StarJediLayout"
               app:layout_constraintTop_toBottomOf="@id/rowHeight"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelMass" android:text="MASS:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueMass" local:MvxBind="Text Character.Mass" style="@style/StarJediText"
                      app:layout_constraintStart_toEndOf="@id/labelMass"
                      app:layout_constraintTop_toTopOf="@id/labelMass"
                      app:layout_constraintBottom_toBottomOf="@id/labelMass"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowHairColor" style="@style/StarJediLayout"
               app:layout_constraintTop_toBottomOf="@id/rowMass"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelHairColor" android:text="HAIR COLOR:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueHairColor" local:MvxBind="Text Character.HairColor" style="@style/StarJediText"          
                      app:layout_constraintStart_toEndOf="@id/labelHairColor"
                      app:layout_constraintTop_toTopOf="@id/labelHairColor"
                      app:layout_constraintBottom_toBottomOf="@id/labelHairColor"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowSkinColor" style="@style/StarJediLayout"
               app:layout_constraintTop_toBottomOf="@id/rowHairColor"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelSkinColor" android:text="SKIN COLOR:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueSkinColor" local:MvxBind="Text Character.SkinColor" style="@style/StarJediText"
                      app:layout_constraintStart_toEndOf="@id/labelSkinColor"
                      app:layout_constraintTop_toTopOf="@id/labelSkinColor"
                      app:layout_constraintBottom_toBottomOf="@id/labelSkinColor"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowEyeColor" style="@style/StarJediLayout"
                app:layout_constraintTop_toBottomOf="@id/rowSkinColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelEyeColor" android:text="EYE COLOR:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueEyeColor" local:MvxBind="Text Character.EyeColor" style="@style/StarJediText"
                      app:layout_constraintStart_toEndOf="@id/labelEyeColor"
                      app:layout_constraintTop_toTopOf="@id/labelEyeColor"
                      app:layout_constraintBottom_toBottomOf="@id/labelEyeColor"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowBirthYear" style="@style/StarJediLayout"
                app:layout_constraintTop_toBottomOf="@id/rowEyeColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelBirthYear" android:text="BIRTH YEAR:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueBirthYear" local:MvxBind="Text Character.BirthYear" style="@style/StarJediText"
                      app:layout_constraintStart_toEndOf="@id/labelBirthYear"
                      app:layout_constraintTop_toTopOf="@id/labelBirthYear"
                      app:layout_constraintBottom_toBottomOf="@id/labelBirthYear"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowGender" style="@style/StarJediLayout"
                app:layout_constraintTop_toBottomOf="@id/rowBirthYear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <TextView android:id="@+id/labelGender" android:text="Gender:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueGender" local:MvxBind="Text Character.Gender" style="@style/StarJediText"
                      app:layout_constraintStart_toEndOf="@id/labelGender"
                      app:layout_constraintTop_toTopOf="@id/labelGender"
                      app:layout_constraintBottom_toBottomOf="@id/labelGender"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowHomeworld" style="@style/StarJediLayout"
                app:layout_constraintTop_toBottomOf="@id/rowGender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelHomeworld" android:text="Homeworld:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueHomeworld" local:MvxBind="Text Character.Homeworld" style="@style/StarJediText"
                      app:layout_constraintStart_toEndOf="@id/labelHeight"
                      app:layout_constraintTop_toTopOf="@id/labelHeight"
                      app:layout_constraintBottom_toBottomOf="@id/labelHeight"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--<androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rowName"
                style="@style/StarJediLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <TextView android:text="Films:" style="@style/StarJediLabel" />
            <TextView local:MvxBind="Text Character.Films" style="@style/StarJediText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rowName"
                style="@style/StarJediLayout"

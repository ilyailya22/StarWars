        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowCreated" style="@style/StarJediLayout"
                app:layout_constraintTop_toBottomOf="@id/rowHomeworld"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelCreated" android:text="CREATED:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueCreated" local:MvxBind="Text Character.Created" style="@style/StarJediText"
                      app:layout_constraintStart_toEndOf="@id/labelCreated"
                      app:layout_constraintTop_toTopOf="@id/labelCreated"
                      app:layout_constraintBottom_toBottomOf="@id/labelCreated"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowEdited" style="@style/StarJediLayout"
                app:layout_constraintTop_toBottomOf="@id/rowCreated"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelEdited" android:text="EDITED:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueEdited" local:MvxBind="Text Character.Edited" style="@style/StarJediText"
                      app:layout_constraintStart_toEndOf="@id/labelEdited"
                      app:layout_constraintTop_toTopOf="@id/labelEdited"
                      app:layout_constraintBottom_toBottomOf="@id/labelEdited"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rowUrl" style="@style/StarJediLayout"
                app:layout_constraintTop_toBottomOf="@id/rowEdited"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            
            <TextView android:id="@+id/labelUrl" android:text="URL:" style="@style/StarJediLabel"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView android:id="@+id/valueUrl" local:MvxBind="Text Character.Url" style="@style/StarJediText"
                      app:layout_constraintStart_toEndOf="@id/labelUrl"
                      app:layout_constraintTop_toTopOf="@id/labelUrl"
                      app:layout_constraintBottom_toBottomOf="@id/labelUrl"
                      app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:backgroundTint="#FFD700"
                android:textColor="#000000"
                android:textStyle="bold"
                local:MvxBind="Click GoBackCommand"
                app:layout_constraintTop_toBottomOf="@id/rowUrl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
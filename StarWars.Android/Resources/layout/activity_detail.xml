<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:local="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:fitsSystemWindows="true"
                                       android:background="#000000">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:paddingTop="64dp"
            android:clipToPadding="false">

        <!-- Name -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="NAME:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <!-- Height -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="HEIGHT:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.Height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <!-- Mass -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="MASS:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.Mass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <!-- Hair Color -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="HAIR COLOR:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.HairColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <!-- Skin Color -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="SKIN COLOR:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.SkinColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <!-- Eye Color -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="EYE COLOR:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.EyeColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <!-- Birth Year -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="BIRTH YEAR:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.BirthYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView 
                    android:text="Gender:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView 
                    local:MvxBind="Text Person.Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView 
                    android:text="Homeworld:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView 
                    local:MvxBind="Text Person.Homeworld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView 
                    android:text="Films:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView 
                    local:MvxBind="Text Person.Films"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="Species:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.Species"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="Vehicles:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.Vehicles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="Starships:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.Starships"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="CREATED:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.Created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
            <TextView
                    android:text="EDITED:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.Edited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">
            <TextView
                    android:text="URL:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />
            <TextView
                    local:MvxBind="Text Person.Url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700"
                    android:fontFamily="@font/starjedi"
                    android:textSize="18sp" />
        </LinearLayout>
        
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:backgroundTint="#FFD700"
                android:textColor="#000000"
                android:textStyle="bold"
                local:MvxBind="Click GoBackCommand" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
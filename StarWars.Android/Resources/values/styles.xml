<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFE81F</item>
        <item name="android:fontFamily">@font/starjedi</item>
    </style>
    <style name="StarJediText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFD700</item>
        <item name="android:fontFamily">@font/starjedi</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StarJediLabel" parent="StarJediText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="StarJediLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
</resources>